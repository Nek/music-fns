{
  "compilerOptions": {
      "target": "ES6",
      "module": "ESNext",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "strict": true,
      "noFallthroughCasesInSwitch": true,
      "experimentalDecorators": true,
      "noUnusedLocals": true,
      "baseUrl": ".",
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
